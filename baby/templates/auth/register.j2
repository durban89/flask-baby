{% extends 'base.j2' %}

{% block header %}
<h1>{% block title %}Register{% endblock %}</h1>
{% endblock %}

{% block content %}
<form method="POST">
  <div class="form-group">
    <label for="username" class="label-username">Username</label>
    <input name="username" id="username" class="form-control input-username" required />
  </div>

  <div class="form-group">
    <label for="password" class="label-password">Password</label>
    <input type="password" class="form-control input-password" name="password"" id="password" required/>
  </div>

  <div class=form-group>
    <label for="verification-code" class="label-verification-code">Verification code</label>
    <div class='input-group'>
      <input type="text" class="form-control input-verification-code" id="verification-code" name="verification-code" required />
      <div class="input-group-append">
        <span id='captcha'>
          <img src='{{url_for('home.captcha')}}' alt='verification code' style='height:calc(1.5em + .75rem + 2px)'/>
        </span>
      </div>
    </div>
  </div>
  
  <button type="submit" class="btn btn-primary button-submit">Register</button>
</form>
{% endblock %}