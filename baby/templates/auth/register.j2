{% extends 'base.j2' %}

{% block header %}
<h1>{% block title %}Register{% endblock %}</h1>
{% endblock %}

{% block content %}
<form method="POST">
  <div class="form-group">
    <label for="username" class="label-username">Username</label>
    <input name="username" id="username" class="form-control input-username" required />
  </div>

  <div class="form-group">
    <label for="password" class="label-password">Password</label>
    <input type="password" class="form-control input-password" name="password"" id="password" required/>
  </div>

  <button type="submit" class="btn btn-primary button-submit">Register</button>
</form>
{% endblock %}