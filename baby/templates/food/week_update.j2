{% extends 'base.html' %}

{% block header %}
  <h1>
  {% block title %}
  {% if renderData['is_new'] %}
  Week Eating Update
  {% else %}
  Week Eating Create
  {% endif %}
  {% endblock %}
  </h1>
{% endblock %}

{% block content %}
<div class="inner-nav-container">
  <label class="label-nav nav">{{ renderData['week_name'] }}<span class="slash">/</span>{{ renderData['type_name'] }}</label>
</div>

<form method="POST">
  <div class="input-group">
    <label for="content" class="label-content">Content</label>
    <textarea rows="2" id='content' name='content' class="textarea-content" required>{{ request.form['content'] or renderData['content'] }}</textarea>
  </div>
  <button type="submit" class="button-submit">Save</button>
</form>
{% endblock %}

{% block script %}
<script type="text/javascript" src="{{url_for('static', filename='js/jquery.slim.min.js')}}"></script>
<script type="text/javascript">
  $(function(){
    $('.menu-select').click(function(o){
      console.log(o);
      if ($('.menu').hasClass('active')) {
        $('.menu').removeClass('active');
      } else {
        $('.menu').addClass('active');
      }
    });

    $('.menu-item').click(function(o) {
      $('.menu-item').siblings().removeClass('selected');

      if ($('.menu').hasClass('active')) {
        $('.menu').removeClass('active');
      }

      $(this).addClass('selected');

      var value = $(this).data('value');
      var text = $(this).data('text');
      

      $('.select-content').text(text);
      $('#type_id').val(value);
    });
  })
</script>
{% endblock %}