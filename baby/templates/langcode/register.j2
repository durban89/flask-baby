{% extends 'base.j2' %}

{% block header %}
  <h1>
    {% block title %}Langcode Register{% endblock %}
  </h1>
{% endblock %}


{% from "_formhelper.j2" import render_field %}
{% block content %}
<form method=post>
  {{ render_field(form.username, class='form-control input-username') }}
  {{ render_field(form.email, class='form-control input-email') }}
  {{ render_field(form.password, class='form-control input-password') }}
  {{ render_field(form.confirm, class='form-control input-confirm') }}
  {{ render_field(form.accept_tos, class='form-control checkbox-accept-tos') }}
  <div class='form-group'>
    <button id='submit' class='btn btn-primary button-submit' type=submit>Register</button>
  </div>
</form>
{% endblock %}

{% block script %}
<script>
$(function(){
  $('#submit').click();
})
</script>
{% endblock %}